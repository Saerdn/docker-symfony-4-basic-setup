{% extends 'backend/base.backend.html.twig' %}

{% form_theme form 'bootstrap_3_layout.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
    {{ form_start(form) }}
    {{ form_errors(form) }}

    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div>
                    <h1>{{ title }}</h1>
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <div>
                                <form action="#">
                                    <div class="row">
                                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                            <div class="form-group">
                                                <label>Name</label>*
                                                {{ form_widget(form.name, {'attr': { 'class': 'form-control' }}) }}
                                            </div>
                                            <div class="form-group">
                                                <label>Select children</label>
                                                {{ form_widget(form.children) }}
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-12">
                                            {{ form_row(form._token) }}
                                            {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary waves-effect waves-light'}}) }}
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}